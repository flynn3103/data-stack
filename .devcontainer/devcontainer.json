{
	"name": "Airflow Development",
	"dockerComposeFile": [
		"../airflow-docker-compose.yaml"
	],
	"service": "airflow-webserver",  // Specify your main service/container name here
	"workspaceFolder": "/opt/airflow",
	"remoteUser": "airflow",          // Specify the user you want to switch to
	"mounts": [
	  "source=${localWorkspaceFolder}/airflow/dags,target=/opt/airflow/dags,type=bind",
	  "source=${localWorkspaceFolder}/airflow/logs,target=/opt/airflow/logs,type=bind",
	  "source=${localWorkspaceFolder}/airflow/plugins,target=/opt/airflow/plugins,type=bind",
	  "source=${localWorkspaceFolder}/airflow/config,target=/opt/airflow/config,type=bind",
	  "source=${localWorkspaceFolder}/airflow/test,target=/opt/airflow/test,type=bind"
	],
	"postCreateCommand": "pip install -r requirements.txt", // Optional: Install requirements
	"containerUser": "airflow",         // Ensures commands are run as the airflow user inside the container
	"customizations": {
		"vscode": {
			"extensions": [
				"ms-python.python"   // Install the Python extension
			],
			"settings": {
				"python.defaultInterpreterPath": "/usr/local/bin/python", // Set the default Python interpreter path
				"python.linting.enabled": true,                            // Enable linting
				"python.linting.pylintEnabled": true                       // Enable pylint
			}
		}
	}
}
  
